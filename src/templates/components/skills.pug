script(type="text/x-template")#skills-block
  .skills__chart
    skills-chart(
      v-for="category in skills" 
      :key="category.id"
      :category="category"
    )
  
script(type="text/x-template")#skills-chart
  div
    p.skills__chart-title {{ category.category }}
    .skills__chart-wrapper
      svg.visually-hidden
        defs
          linearGradient#linear
            stop(offset='27%' stop-color='#4A00ED')
            stop(offset='70%' stop-color='#7C00EA')
      skills-progress(
        v-for="skill in category.skills" 
        :key="skill.id"
        :skill="skill"
      )

script(type="text/x-template")#skills-progress
  .skills__chart-progress
    svg(viewBox="0 0 160 160", width="150", heigth="150", preserveAspectRatio="xMidYMid meet")
      circle(cx="80", cy="80", r="70", ref="circle-progress" stroke="url(#linear)")
      circle(cx="80", cy="80", r="70")
    .skills__chart-tech
      p.skills__chart-tech-text {{skill.title}}
